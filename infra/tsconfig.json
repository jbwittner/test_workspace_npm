{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@monorepo/domain": ["../domain/src"],
      "@spi": ["../infra/src/spi"]
    }
  },
  "references": [
    {
      "path": "../domain"
    }
  ],
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
